<?xml version="1.0"?>

<jetscape>
  
  <nEvents> 2 </nEvents>

   <Random>
    <seed>0</seed>
   </Random>
   
  <!-- Hard Process -->
  <Hard>
    <!-- Parton Gun test with fixed pT and fixed IS pos = 0  -->
    <PGun>
      <name>PGun</name>
      <pT>100</pT>
      <parID>21</parID>
      <useHybridHad>0</useHybridHad>
    </PGun>
  </Hard>

  
  <!--Eloss Modules -->
  <Eloss>
    <deltaT>0.1</deltaT>
    <formTime> -0.1</formTime>
    <maxT>20</maxT>
    
    <Matter> 
      <matter_on> 1 </matter_on>
      <Q0> 1.0 </Q0>
      <T0> 0.16 </T0>
      <vir_factor> 0.25 </vir_factor>
      <in_vac> 1 </in_vac>
      <recoil_on> 0 </recoil_on>
      <broadening_on> 0 </broadening_on>
      <brick_med> 0 </brick_med>
      <brick_length> 5.0 </brick_length>
      <hydro_Tc> 0.16 </hydro_Tc>
      <qhat0> -2.0 </qhat0>
      <alphas> 0.2 </alphas>
    </Matter>
  </Eloss>
  
  <!-- Jet Hadronization Module -->
  <JetHadronization>
    <name>colorless</name>
    <take_recoil>1</take_recoil>
    <eCMforHadronization>2510</eCMforHadronization>
    <weak_decays>on</weak_decays>
  </JetHadronization>

  <!-- Print Hadron info into a file -->
  <HadronPrinter>
    <OutputFileName>JetscapeHadronListBin.dat</OutputFileName>
    <KinematicVariable>pt</KinematicVariable>  <!-- space sensitive: y, eta, pt, e, phi  -->
    <min> 0.0   </min>  <!-- minimum value of Kinematic Variable -->
    <max> 100.0 </max>  <!-- maximum value of Kinematic Variable -->
  </HadronPrinter>
  
</jetscape>
